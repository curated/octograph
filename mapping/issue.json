{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "analysis": {
      "filter": {
        "autocomplete_filter": {
          "type": "ngram",
          "min_gram": 1,
          "max_gram": 100,
          "token_chars": ["letter", "digit"]
        }
      },
      "analyzer": {
        "autocomplete_analyzer": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": ["lowercase", "autocomplete_filter"]
        },
        "autocomplete_search_analyzer": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": ["lowercase"]
        }
      }
    }
  },
  "mappings": {
    "issue": {
      "properties": {
        "number": {
          "type": "integer",
          "index": false
        },
        "title": {
          "type": "text"
        },
        "bodyText": {
          "type": "text",
          "index": false
        },
        "state": {
          "type": "keyword"
        },
        "thumbsUp": {
          "type": "integer"
        },
        "thumbsDown": {
          "type": "integer"
        },
        "laugh": {
          "type": "integer"
        },
        "hooray": {
          "type": "integer"
        },
        "confused": {
          "type": "integer"
        },
        "heart": {
          "type": "integer"
        },
        "authorLogin": {
          "type": "completion",
          "analyzer": "autocomplete_analyzer",
          "search_analyzer": "autocomplete_search_analyzer"
        },
        "repoOwnerLogin": {
          "type": "completion",
          "analyzer": "autocomplete_analyzer",
          "search_analyzer": "autocomplete_search_analyzer"
        },
        "repoName": {
          "type": "completion",
          "analyzer": "autocomplete_analyzer",
          "search_analyzer": "autocomplete_search_analyzer"
        },
        "repoLanguage": {
          "type": "completion",
          "analyzer": "autocomplete_analyzer",
          "search_analyzer": "autocomplete_search_analyzer"
        },
        "repoForks": {
          "type": "integer"
        },
        "repoStargazers": {
          "type": "integer"
        },
        "createdAt": {
          "type": "date"
        },
        "updatedAt": {
          "type": "date"
        }
      }
    }
  }
}
