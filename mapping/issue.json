{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1
  },
  "mappings": {
    "issue": {
      "properties": {
        "number": {
          "type": "integer",
          "index": false
        },
        "title": {
          "type": "text",
          "analyzer": "pattern"
        },
        "body": {
          "type": "text",
          "index": false
        },
        "state": {
          "type": "keyword"
        },
        "thumbsUp": {
          "type": "integer"
        },
        "thumbsDown": {
          "type": "integer"
        },
        "laugh": {
          "type": "integer"
        },
        "hooray": {
          "type": "integer"
        },
        "confused": {
          "type": "integer"
        },
        "heart": {
          "type": "integer"
        },
        "authorLogin": {
          "type": "keyword"
        },
        "repoOwnerLogin": {
          "type": "keyword"
        },
        "repoName": {
          "type": "keyword"
        },
        "repoLanguage": {
          "type": "keyword"
        },
        "repoForks": {
          "type": "integer"
        },
        "repoStargazers": {
          "type": "integer"
        },
        "createdAt": {
          "type": "date"
        },
        "updatedAt": {
          "type": "date"
        }
      }
    }
  }
}
